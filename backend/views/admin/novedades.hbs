<div class="container" style="margin-top: 50px auto;">
    {{!-- fila 1 --}}
    <div class="row">
        <p class ="text-end">Hola {{persona}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!-- Fin fila 1--}}
    {{!-- Inicio Fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn brn-succes" style="Background-color: rgb(88, 149, 88); font-weight: bold;" href="/admin/novedades/agregar"><i class="fa fa-plus" aria hidden="true"></i>+ Nuevo </a>

        </div>
    </div>
    {{!--Fin final 2--}}
    {{!--Inicio Fila 3--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thread>
                    <tr class="table dark">
                        <th scope="col">#</th>
                        <th scope="col">título</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thread>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{{imagen}}}</td>
                    <td class="text-end">

                            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-secondary">
                            <i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>



</div>

